<%- include('../partials/header') -%>

<div class="container">
    <div class="row">
        <h1  style="text-align:center">Edit <%= champground.name%></h1>
        <div style="width: 30% ; margin:25px auto;">
            <form action="/champgrounds/<%=champground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="champground[name]" value="<%=champground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="champground[image]" value="<%= champground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="champground[description]" value="<%=champground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block btn-lg">Submit!!</button>
                </div>
            </form>
        </div>

    </div>
</div>
<%- include('../partials/fotter') -%>