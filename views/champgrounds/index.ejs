<%- include('../partials/header') -%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to yelpcamp!</h1>
            <p>
                welcome to our collection of campground!!
            </p>
            <p>
                <a class="btn btn-primary btn-large" href="/champgrounds/new">create campground</a>
            </p>
        </div>
    </header>
    <div class="row  text-center" style="display:flex; flex-wrap:wrap;">
        <% champground.forEach(function(champinf){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= champinf.image %>">
                    <div class="caption">
                        <h4><%= champinf.name %></h4>
                    </div>
                    <p>
                        <a href="/champgrounds/<%=champinf._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
     </div>
</div>   
    
    
<%- include('../partials/fotter') -%>